<%= render 'refinery/admin/search_header', :url => refinery.workflows_admin_workflows_path %>
<% if searching? %>
  <% if @workflows.any? %>
    <ul>
      <%= render :partial => 'workflow', :collection => @workflows %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_workflows.any? -%>
    <% @grouped_workflows.each do |container| %>
      <h3><%= l((workflow_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'workflow', :collection => workflow_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_workflows', :scope => 'refinery.workflows.admin.workflows.index') %></strong>
    </p>
  <% end -%>
<% end %>
